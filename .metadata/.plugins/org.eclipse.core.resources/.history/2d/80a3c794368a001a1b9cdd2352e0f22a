import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;
import java.util.stream.Collectors;

public class program3 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		List<Integer> list = new ArrayList<>();
		List<String> list1 = new ArrayList<>();
		List<Double> list2 = new ArrayList<>();
				
		System.out.println("Digite seu ID: ");
		list.add(sc.nextInt());
		System.out.println("Digite seu nome: ");
		sc.nextLine();
		list1.add(sc.nextLine());
		System.out.println("Digite seu salário: ");
		list2.add(sc.nextDouble());
		
		
		System.out.println(list.size()); //contagem do tamanho da list
		
		list.removeIf(x -> x.charAt(0) == 'm'); // condição para remover item específico (caso não encontre, retorna o valor -1)
		
		for (String x : list) {
			System.out.println(x);
		}
	
		System.out.println("Index caick: " + list.indexOf("caick")); //encontra em que posição da lista está o nome "caick"
		
		
		List<String> result = list.stream().filter(x -> x.charAt(0) == 'a').collect(Collectors.toList());//encontra todos os valores começado com a letra 'a'
		for (String x : result) {
			System.out.println(x);
		}
		
		
		String name = list.stream().filter(x -> x.charAt(0) == 'a').findFirst().orElse(null); //encontra o primeiro valor começado com a letra 'a'
		System.out.println(name);
		
		
	}
	

}
